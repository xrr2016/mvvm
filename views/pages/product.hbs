<div class="container">
    <div class="product-container clearfix" style="border:16px solid {{color}}">
        <div class="product-left">
            <ul class="left-list" style="background-color:{{color}}">
                <li class="left-list-item left-list-item-active">智能产品系列</li>
                <li class="left-list-item">日常用品系列</li>
                <li class="left-list-item">礼品系列</li>
            </ul>
        </div>
        {{#if light }}
          <div class="product-mid">
            <img src="{{light.src}}" alt="" />
            <div class="des-box" style="border-left:16px solid {{color}}">
              <h2 class="des-title">{{light.name}}</h2>
              <p class="des-content">{{light.description}}</p>
            </div>
          </div>
          <div class="product-right">
            <img src="{{light.src}}" alt="" class="product-main-img" />
            <ul class="product-img-list">
              <li class="img-list-item"><img src="{{light.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{light.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{light.src}}" alt="" style="border:10px solid {{color}}" /></li>
            </ul>
          </div>
        {{/if}}
        {{#if tape }}
          <div class="product-mid">
            <img src="{{tape.src}}" alt="" />
            <div class="des-box" style="border-left:16px solid {{color}}">
              <h2 class="des-title">{{tape.name}}</h2>
              <p class="des-content">{{tape.description}}</p>
            </div>
          </div>
          <div class="product-right">
            <img src="{{tape.src}}" alt="" class="product-main-img" />
            <ul class="product-img-list">
              <li class="img-list-item"><img src="{{tape.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{tape.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{tape.src}}" alt="" style="border:10px solid {{color}}" /></li>
            </ul>
          </div>
          {{/if}}
        {{#if ball }}
          <div class="product-mid">
            <img src="{{ball.src}}" alt="" />
            <div class="des-box" style="border-left:16px solid {{color}}">
              <h2 class="des-title">{{ball.name}}</h2>
              <p class="des-content">{{ball.description}}</p>
            </div>
          </div>
          <div class="product-right">
            <img src="{{ball.src}}" alt="" class="product-main-img" />
            <ul class="product-img-list">
              <li class="img-list-item"><img src="{{ball.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{ball.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{ball.src}}" alt="" style="border:10px solid {{color}}" /></li>
            </ul>
          </div>
        {{/if}}
        {{#if cup }}
          <div class="product-mid">
            <img src="{{cup.src}}" alt="" />
            <div class="des-box" style="border-left:16px solid {{color}}">
              <h2 class="des-title">{{cup.name}}</h2>
              <p class="des-content">{{cup.description}}</p>
            </div>
          </div>
          <div class="product-right">
            <img src="{{cup.src}}" alt="" class="product-main-img" />
            <ul class="product-img-list">
              <li class="img-list-item"><img src="{{cup.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{cup.src}}" alt="" style="border:10px solid {{color}}" /></li>
              <li class="img-list-item"><img src="{{cup.src}}" alt="" style="border:10px solid {{color}}" /></li>
            </ul>
          </div>
          {{/if}}
        <div class="go-back" style="border:2px solid {{color}}">返回</div>
    </div>
</div>
<style>
    .product-container {
        width: 100%;
        margin-top: 4%;
    }
    .product-left,
    .product-mid,
    .product-right {
        height: 100%;
        float: left;
    }

    .product-left {
        width: 20%;
    }

    .product-mid {
        width: 30%;
    }

    .product-right {
        position: relative;
        width: 50%;
    }

    .left-list {
        position: relative;
        transform: translate(0, 120%);
        margin-top: -25%;
        width: 60%;
        margin: 0;
        padding: 14% 2% 14% 10%;
    }

    .left-list-item {
        width: 80%;
        line-height: 100%;
        padding: 12px 12px 10px 0;
        cursor: pointer;
        font-size: 20px;
        font-weight: bold;
        border-bottom: 4px solid transparent;
    }

    .left-list-item-active {
        border-bottom: 4px solid #00a497;
    }
    /*product-mid*/

    .product-mid img {
        display: block;
        width: 40%;
        margin: 20% auto 20% 0;
    }

    .des-box {
        width: 60%;
        height: 30%;
        padding-left: 4%;
        padding-bottom: 5%;
        padding-top: 5%;
        margin-top: 20%;
        margin-bottom: 20%;
    }

    .des-tilte {
        font-size: 24px;
        font-weight: bold;
    }

    .des-content {
        margin-top: 12%;
        margin-bottom: 12%;
        font-size: 16px;
        letter-spacing: 1px;
        word-spacing: 1px;
    }
    .go-back{
      position: absolute;
      padding: 0.5em 1em;
      font-size: 20px;
      cursor: pointer;
      bottom: 14%;
      left: 68%;
      border-radius: 12px;
    }
    /*product-right*/

    .product-main-img {
        display: block;
        position: absolute;
        width: 45%;
        left: 0%;
        -webkit-transform: translate(0%, 20%);
        transform: translate(0%, 20%);
    }

    .product-main-img:after {
        position: absolute;
        top: 10%;
        left: 10%;
        content: "" width: 100%;
        height: 100;
        border: 4px solid #ddd;
    }

    .product-img-list {
        position: absolute;
        width: 30%;
        right: 0;
        padding: 0;
        margin: 0;
        -webkit-transform: translate(0%, 20%);
        transform: translate(0%, 20%);
    }

    .img-list-item {
        padding: 5%;
        height: 33%;
    }

    .img-list-item img {
        width: 70%;
    }
    @media (max-width:768px) {
      .logo{
        display: none;
      }
      .product-container{
        margin-top: 0;
        height: 600px;
      }
      .product-left{
        display: none;
      }
      .product-mid{
        width: 40%;
      }
      .product-right{
        width: 60%;
      }
      .des-title{
        width: 400%;
        font-size: 16px;
        text-align: center;
      }
      .des-content{
        padding-left: 2%;
        width: 400%;
        text-indent: 2em;
        font-size: 12px;
      }
      .go-back{
        font-size: 12px;
      }
      .left-list-item{
        font-size: 10px;
      }

    }
</style>
<script type="text/javascript">
    var goBack = document.querySelector('.go-back')
    goBack.addEventListener('click',function(){
      window.history.back()
    })
</script>
